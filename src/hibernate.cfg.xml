<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://LocalHost:3306/jaja
		</property>
		<property name="hibernate.connection.username">jaja</property>
		<property name="hibernate.connection.password">gaga</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- Mapping files -->
		<!--  <mapping resource="storeinventory.hbm.xml"/>  -->
		<mapping class="ac.il.shenkar.couponHibernet.Coupon"/>
		<mapping class="ac.il.shenkar.couponHibernet.Business"/>
		<mapping class="ac.il.shenkar.couponHibernet.User"/>
</session-factory>
</hibernate-configuration>